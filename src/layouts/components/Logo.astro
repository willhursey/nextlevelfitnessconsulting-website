---
import config from "@/config/config.json";
import ImageMod from "./ImageMod.astro";

const { src, srcDarkmode }: { src?: string; srcDarkmode?: string } =
  Astro.props;
const {
  logo,
  logo_darkmode,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_darkmode?: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand inline-block">
  {
    src || srcDarkmode || logo || logo_darkmode ? (
      <ImageMod
        src={src ? src : logo}
        class={`inline-block`}
        width={logo_width * 2}
        height={logo_height * 2}
        alt={title}
        style={{
          height: logo_height,
          width: logo_width,
        }}
        format="svg"
      />
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
