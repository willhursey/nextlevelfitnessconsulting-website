---
import { humanize } from "@/lib/utils/textConverter";

const { title = "", lastModified }: { title?: string; lastModified?: string } =
  Astro.props;
---

<section>
  <div class="container text-center" data-aos="fade-up-sm">
    <div class="rounded-2xl px-8 pt-20">
      <h1 class="h2 md:h1 mb-4" set:text={humanize(title)} />
      <p class="text-2xl font-medium text-tertiary">Updated: {lastModified}</p>
    </div>
  </div>
</section>
